{
  "name": "@halvaradop/tailwindcss-workspace",
  "private": true,
  "version": "0.0.0",
  "description": "A monorepo projectmanage multiple packages with features and utilities for TailwindCSS.",
  "scripts": {
    "build:watch": "npm run build:watch --workspaces",
    "build": "npm run build --workspaces",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/@halvaradop/tailwindcss-utilities"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/tailwindcss-utilities.git"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind plugin",
    "utilities",
    "productivity",
    "web",
    "development"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halvaradop/tailwindcss-utilities/issues"
  },
  "homepage": "https://github.com/halvaradop/tailwindcss-utilities#readme",
  "devDependencies": {
    "@types/node": "^22.5.4",
    "autoprefixer": "^10.4.19",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 130,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 120,
          "tabWidth": 2
        }
      }
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
