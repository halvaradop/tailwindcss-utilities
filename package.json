{
  "name": "@halvaradop/tailwindcss-workspace",
  "private": true,
  "version": "0.0.0",
  "description": "A monorepo projectmanage multiple packages with features and utilities for TailwindCSS.",
  "scripts": {
    "build": "npm run build --workspaces",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/@halvaradop/tailwindcss-utilities"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/tailwindcss-utilities.git"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind plugin",
    "utilities",
    "productivity",
    "web",
    "development"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halvaradop/tailwindcss-utilities/issues"
  },
  "homepage": "https://github.com/halvaradop/tailwindcss-utilities#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.3"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 130,
    "arrowParens": "avoid"
  },
  "workspaces": [
    "packages"
  ]
}