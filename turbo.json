{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src"],
      "outputs": ["dist"]
    },
    "dev": {
      "cache": false
    },
    "test": {
      "cache": false,
      "inputs": ["test"]
    },
    "test:watch": {
      "cache": false,
      "inputs": ["test"]
    },
    "clean": {
      "cache": false
    },
    "clean:dist": {
      "cache": false
    },
    "clean:modules": {
      "cache": false
    }
  },
  "cacheDir": ".turbo/cache"
}
