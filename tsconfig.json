{
  "display": "Node 20",
  "_version": "20.1.0",
  "compilerOptions": {
    "target": "ES2022",                                
    "module": "commonjs",
    "allowJs": true,                                  
    "checkJs": true,                             
    "declaration": true,                          
    "declarationMap": false,                        
    "declarationDir": "./dist",
    "outDir": "./dist",                   
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "strict": true,            
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["app", "node_modules", "dist"]
}