{
  "display": "Node 20",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "Node16",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": ["app", "node_modules", "dist"]
}
