{
  "name": "@halvaradop/tailwindcss-animations",
  "version": "0.1.0",
  "description": "A collection of utility classes and utilities for animations using Tailwind CSS",
  "type": "module",
  "scripts": {
    "build": "pnpm dlx @tailwindcss/cli -i ./src/index.css -o ./dist/plugin.css --minify",
    "dev": "pnpm dlx @tailwindcss/cli -i ./src/index.css -o ./dist/plugin.css --watch",
    "clean": "npm run clean:dist && npm run clean:modules",
    "clean:dist": "rm -rf dist",
    "clean:modules": "rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/tailwindcss-utilities.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/@halvaradop/tailwindcss-animations"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwindcss",
    "plugin",
    "utilities",
    "productivity",
    "web",
    "development"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halvaradop/tailwindcss-utilities/issues"
  },
  "homepage": "https://github.com/halvaradop/tailwindcss-utilities#readme",
  "exports": {
    ".": "./dist/plugin.css"
  },
  "files": [
    "dist"
  ]
}
