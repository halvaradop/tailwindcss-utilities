{
  "name": "@halvaradop/tailwindcss-merge",
  "version": "0.1.0",
  "description": "A TailwindCSS plugin that merge the classes provided",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "npm run clean:dist && npm run clean:modules",
    "clean:dist": "rm -rf dist",
    "clean:modules": "rm -rf node_modules"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/@halvaradop/tailwindcss-merge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/tailwindcss-utilities.git"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind plugin",
    "utilities",
    "productivity",
    "web",
    "development"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halvaradop/tailwindcss-utilities/issues"
  },
  "homepage": "https://github.com/halvaradop/tailwindcss-utilities#readme",
  "devDependencies": {
    "@halvaradop/tailwindcss-core": "workspace:*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ]
}
