{
  "name": "@halvaradop/tailwindcss-core",
  "version": "0.1.0",
  "description": "Core package for building utilities and classes for Tailwind CSS",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "clean": "npm run clean:dist && npm run clean:modules",
    "clean:dist": "rm -rf dist",
    "clean:modules": "rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/tailwindcss-utilities.git"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind plugin",
    "utilities",
    "productivity",
    "web",
    "development",
    "core",
    "intern"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halvaradop/tailwindcss-utilities/issues"
  },
  "homepage": "https://github.com/halvaradop/tailwindcss-utilities#readme",
  "exports": {
    "./merge": {
      "types": "./dist/merge.d.ts",
      "import": "./dist/merge.js",
      "require": "./dist/merge.cjs"
    },
    "./css": {
      "types": "./dist/generate-classes.d.ts",
      "import": "./dist/generate-classes.js",
      "require": "./dist/generate-classes.cjs"
    },
    "./tsup.config.base": {
      "types": "./dist/tsup.config.base.d.ts",
      "import": "./dist/tsup.config.base.js",
      "require": "./dist/tsup.config.base.cjs"
    },
    "./tsconfig.base.json": "./tsconfig.base.json"
  },
  "files": [
    "dist",
    "tsconfig.base.json"
  ]
}
